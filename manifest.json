{
  "manifest_version": 2,
  "name": "in-mind",
  "short_name": "in-mind",
  "description": "",
  "version": "0.0.1",
  "minimum_chrome_version": "38",

  "icons": {
    "16": "assets/icon_16.png",
    "128": "assets/icon_128.png"
  },

  "permissions": ["storage", "alarms", "notifications", "webview"],

  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },

  "offline_enabled": true
}
